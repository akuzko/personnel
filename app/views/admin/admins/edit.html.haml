.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_admins_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_admin_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_admin_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      = t("personnel.admin.title-single-whom", :default => "Admin")
    .inner
      = render "shared/form_errors", :object => @admin
      = form_for @admin, :url => admin_admin_path(@admin), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
