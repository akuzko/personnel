.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_admins_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_admin_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_admin_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_admin.email", :default => t("activerecord.labels.email", :default => "Email"))
          \:
        = @admin.email
      %p
        %b
          = t("activerecord.attributes.admin_admin.sign_in_count", :default => t("activerecord.labels.sign_in_count", :default => "Sign in count"))
          \:
        = @admin.sign_in_count
      %p
        %b
          = t("activerecord.attributes.admin_admin.current_sign_in_at", :default => t("activerecord.labels.current_sign_in_at", :default => "Current sign in at"))
          \:
        = @admin.current_sign_in_at
      %p
        %b
          = t("activerecord.attributes.admin_admin.last_sign_in_at", :default => t("activerecord.labels.last_sign_in_at", :default => "Last sign in at"))
          \:
        = @admin.last_sign_in_at
      %p
        %b
          = t("activerecord.attributes.admin_admin.current_sign_in_ip", :default => t("activerecord.labels.current_sign_in_ip", :default => "Current sign in ip"))
          \:
        = @admin.current_sign_in_ip
      %p
        %b
          = t("activerecord.attributes.admin_admin.last_sign_in_ip", :default => t("activerecord.labels.last_sign_in_ip", :default => "Last sign in ip"))
          \:
        = @admin.last_sign_in_ip
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_admin_path(@admin), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_admin_path(@admin), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
