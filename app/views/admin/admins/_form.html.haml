.group
  = f.label :super_user, t("activerecord.attributes.admin.super_user", :default => "Super User"), :class => :label
  = f.check_box :super_user, :class => 'check_box'
.group
  = f.label :approved, t("activerecord.attributes.admin.approved", :default => "Approved"), :class => :label
  = f.check_box :approved, :class => 'check_box'
.group
  = f.label :email, t("activerecord.attributes.admin.email", :default => "Email"), :class => :label
  = f.text_field :email, :class => 'text_field'
  %span.description Z3K email address
.group
  = f.label :password, t("activerecord.attributes.admin.password", :default => "Password"), :class => :label
  = f.password_field :password, :class => 'text_field'
  %span.description Password
.group
  = f.label :confirm_password, t("activerecord.attributes.admin.confirm_password", :default => "Confirm Password"), :class => :label
  = f.password_field :password_confirmation, :class => 'text_field'
  %span.description Password Confirmation
.group
  = select_tag 'departments[]', options_for_select(Department.selection, @admin.departments.map{|d|d.id}), { :multiple => true, :size =>Department.selection.size }
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}") + t("web-app-theme.cancel", :default => "Cancel"), admin_admins_path, :class => "button"
