.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_schedule_statuses_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_schedule_status_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_schedule_status_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.schedule_statuses.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @status.name
      %p
        %b
          = t("activerecord.attributes.schedule_statuses.color", :default => t("activerecord.labels.color", :default => "Color"))
          \:
        %span{:style => "display:block;width:20px;height:20px;background-color:##{@status.color}"}
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_schedule_status_path(@status), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_schedule_status_path(@status), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
